<h1> Express App : {{title}}</h1>
<form method="POST" action="{{form_action}}" id="formAddUser">
    <input type="hidden" name="id" value="{{data._id}}" />
    name : <input type="text" name="name" value="{{data.name}}" /><br />
    firstName : <input type="text" name="firstName" value="{{data.firstName}}" /><br />
    login : <input type="text" name="login" value="{{data.login}}" /><br />
    mdp : <input type="password" name="mdp" value="{{data.mdp}}" /><br />
    function : <input type="text" name="function" value="{{data.function}}" /><br />
    office : <input type="text" name="office" value="{{data.office}}" /><br />
    date_naiss : <input type="text" name="date_naiss" value="{{data.date_naiss}}" /><br />
    adresse1 : <input type="text" name="adresse1" value="{{data.adresse1}}" /><br />
    adresse2 : <input type="text" name="adresse2" value="{{data.adresse2}}" /><br />
    cp : <input type="text" name="cp" value="{{data.cp}}" /><br />
    city : <input type="text" name="city" value="{{data.city}}" /><br />

    country : <select id="country" name="country">
        {{#each liste}}
        {{#compare ../data.country  this._id  operator='=='}}
        <option value="{{this._id}}" selected>{{this.name}} - {{this.code}} </option>
        {{else}}
        <option value="{{this._id}}">{{this.name}} - {{this.code}}</option>
        {{/compare}}
        {{/each}}
    </select><br />

    mobile_phone : <input type="text" name="mobile_phone" value="{{data.mobile_phone}}" /><br />
    home_phone : <input type="text" name="home_phone" value="{{data.home_phone}}" /><br />
    <input type="submit" value="Confirmer la {{libelle}}" />
    <input type="button" value="Supprimer cet utilisateur" id="delbtn" class="button">
</form>
<!-- Script de validation du formulaire de modification -->

<script>
    var form = document.getElementById('formAddUser');
    form.addEventListener('submit', function (evt) {
        var actionPost = "/" + form.action.split('/')[3];
        if (actionPost == "/modifyUser") form.action += "/{{data._id}}";
        form.submit();
    });
    var btn_del = document.getElementById('delbtn');
    btn_del.addEventListener('click', function (evt) {
        window.location = "/deleteUser/{{data._id}}";
    });

</script>